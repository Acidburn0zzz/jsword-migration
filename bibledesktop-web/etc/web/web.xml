<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

  <display-name>JSword</display-name>
  <description>Servlet interface to the Bible</description>

  <context-param>
    <param-name>localprefix</param-name>
    <param-value>@localprefix@</param-value>
  </context-param>
  <context-param>
    <param-name>webprefix</param-name>
    <param-value>@webprefix@</param-value>
  </context-param>

  <servlet>
    <servlet-name>demo</servlet-name>
    <servlet-class>org.crosswire.jsword.view.web.DemoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>remoter</servlet-name>
    <servlet-class>org.crosswire.jsword.view.web.RemoterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>demo</servlet-name>
    <url-pattern>/demo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>remoter</servlet-name>
    <url-pattern>/remoter</url-pattern>
  </servlet-mapping>

  <!--
  <mime-mapping>
    <extension>jnlp</extension>
    <mime-type>application/x-java-jnlp-file</mime-type>
  </mime-mapping>
  -->

</web-app>
